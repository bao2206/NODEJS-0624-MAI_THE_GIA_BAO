<!-- Page Title
		============================================= -->
    <section class="page-title bg-transparent">
      <div class="container">
        <div class="page-title-row">
    
          <div class="page-title-content">
            <h1>Blog</h1>
            <span>Our Latest News in Masonry Layout</span>
          </div>
    
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">Blog</li>
            </ol>
          </nav>
    
        </div>
      </div>
    </section><!-- .page-title end -->
    
    <!-- Content
        ============================================= -->
    <section id="content">
      <div class="content-wrap">
        <div class="container">
    
          <!-- Posts
              ============================================= -->
          <div id="posts" class="post-grid row grid-container gutter-30">
    
            <% if (Array.isArray(blog) && blog.length > 0) { %>
              <% blog.forEach(post => { %>
                <div class="entry col-lg-3 col-md-4 col-sm-6 col-12">
                  <div class="grid-inner">
                    <div class="entry-image">
                      <a href="<%= post.link %>" target="_blank">
                        <img src="<%= post.image %>" alt="<%= post.title %>">
                      </a>
                    </div>
                    <div class="entry-title">
                      <h2><a href="<%= post.link %>" target="_blank"><%= post.title %></a></h2>
                    </div>
                    <div class="entry-meta">
                      <ul>
                        <li><i class="uil uil-schedule"></i> <%= new Date(post.pubDate).toLocaleDateString("vi-VN") %></li>
                        <li><a href="<%= post.link %>#comments" target="_blank"><i class="uil uil-comments-alt"></i> Comments</a></li>
                      </ul>
                    </div>
                    <div class="entry-content">
                      <p><%= post.contentSnippet %></p>
                      <a href="<%= post.link %>" target="_blank" class="more-link">Read More</a>
                    </div>
                  </div>
                </div>
              <% }); %>
            <% } else { %>
              <p class="text-center">Không có bài viết nào để hiển thị.</p>
            <% } %>
            
            
            </div>
      </div>
    </section><!-- #content end -->